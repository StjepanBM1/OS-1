
    %define     C_BUILD '1.0.0'

    ;   Commands
    cmd_ver:    db  'ver',  0
    cmd_mem:    db  'mem',  0
    cmd_cls:    db  'cls',  0
    cmd_exit:   db  'exit', 0

    ;   Output
    str_ver:    db  " OS/1 Build [ ",BUILD," ] : Console Version [ ",C_BUILD," ]", 0
    str_err:    db  " File or command not found...", 0
    str_mem:    db  " [ ",MEM," ] KB" , 0

    c_title:    db  " [ OS/1 Console | Build ",C_BUILD," ] [ Memory : ",MEM," KB ] [ 'exit' = exit ] ", 0
    c_wlc_str:  db  " Decode the memory thing yourself!", 0
    c_prompt:   db  "% ", 0

    c_buffer    times   64  db  0

    c_backg:
        call    _ui_clear
        call    _ui_backgr

        ret

    ;   Input
    get_str:
        xor     cl, cl

        .loop:
            mov ah, 0
            int     16h

            cmp al, 0x08
            je  .backspace

            cmp al, 0x0D
            je  .done
            
            cmp cl, 0x3F
            je  .loop

            mov ah, 0x0e
            int     0x10

            stosb
            inc cl
            jmp .loop

        .backspace:
            cmp cl, 0
            je  .loop

            dec di
            mov byte [di], 0
            dec cl
            
            mov ah, 0x0e
            mov al, 0x08
            int     0x10

            mov al, ' '
            int     0x10

            mov al, 0x08
            int     0x10

            jmp .loop

        .done:
            mov al, 0
            stosb

            cmp dh, 22 + 1
            je  app_console

            mov ah, 2
            add dh, 1
            mov dl, 3
            int     10h

            ret

    strcmp:
        .loop:
            mov al, [si]
            mov bl, [di]
            cmp al, bl
            jne .notq

            cmp al, 0
            je  .done

            inc di
            inc si
            jmp .loop
        
        .notq:
            clc
            ret

        .done:
            stc
            ret
